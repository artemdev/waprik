<!--?xml version="1.0" encoding="utf-8"?-->
<!DOCTYPE html PUBLIC "-//WAPFORUM//DTD XHTML Mobile 1.0//EN" "http://www.wapforum.org/DTD/xhtml-mobile10.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="ru">

<head>
  <title>
  	<%= yield(:title) %> скачать бесплатно на мобильный
  </title>
  <meta http-equiv="Content-Type" content="application/vnd.wap.xhtml+xml; charset=UTF-8">
  <%= stylesheet_link_tag "public/mobile", :media => "all" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<% if !flash[:success].nil? %>
		<div class="a">
			<%= flash[:success] %>
		</div>
	<% elsif !flash[:error].nil? %>
		<div class="a">
			<%= flash[:error] %>
		</div>	
	<% end %>
	
	<div class="a">
		<div class="octobird-block" data-tp="all" data-nb="1"></div>
	</div>

	<% if yield(:title).present? %>
		<div class="title">
			<%= yield(:title) %>
		</div>	
	<% end %>

	<%= yield %>

	<div class="foot">
		<% unless @footer_links.nil? %>
			<% @footer_links.each do |link| %>
				<%= link.html_safe %> <br />
			<% end %>
		<% end %>
		<a href="http://waprik.ru">На главную</a>
	</div>
	
	<div class="banners">
		<a href="http://waplog.net/ru/c.shtml?25772"><img src="http://c.waplog.net/334067.cnt" alt="waplog"></a>
	</div>


	<!-- octobird -->
	<script type="text/javascript">
	    var _ob = {
	        sid: 987
	    };
	    (function() {
	        var ob = document.createElement('script');
	        ob.type = 'text/javascript';
	        ob.async = true;
	        ob.src = 'http://show.octobird.com/ob.js';
	        var s = document.getElementsByTagName('script')[0];
	        s.parentNode.insertBefore(ob, s);
	    })();
	</script>
</body>
</html>

<% if Rails.env.development? %>
	development

<% end %>