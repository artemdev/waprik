<div class="title">
	Создать категорию
</div>

<%= form_for(:category, :url => {:action => 'create_category'}) do |f| %>
	<div class="a">
	<%= render(:partial => 'category_form', :locals => {:f => f}) %>

	<%= submit_tag("Создать") %>
</div>
<% end %>

<div class="foot">
	<%= link_to("Все жанры", :controller => 'categories') %> <br />
	<%= link_to("Меню", :controller => 'access') %> <br />
	<%= link_to("Выход", :controller => 'access', :action => 'logout') %>
</div>
