<% @title = "Add video" %>

<div class="title">
	Добавить видео
</div>

<%= form_for(:video, :url => {:action => 'create', :category_id => @category.id}, :html => { :multipart => true }) do |f| %>
 
	<%= render(:partial => 'video_form', :locals => {:f => f}) %>

	<div class="b">
		<%= submit_tag("Создать") %>
	</div>

<% end %>

<div class="foot">
	<%= link_to("Все жанры", :action => 'index') %> <br />
	<%= link_to("Меню", :controller => 'access') %> <br />
	<%= link_to("Выход", :controller => 'access', :action => 'logout') %>
</div>
<div class="b">
	<%= debug(params) %>
</div>