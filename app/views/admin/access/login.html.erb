<%= form_tag(:action => 'attempt_login') do %>
	  <div class="form-group">
			<%= label_tag :username, "Имя пользователя", class: 'col-sm-2 control-label' %>
			<div class="col-sm-10">
				<%= text_field_tag :username, nil, class: 'form-control' %>
			</div>
		</div>
		<div class="form-group">
			<%= label_tag :password, "Пароль", class: 'col-sm-2 control-label' %>
			<div class="col-sm-10">
				<%= password_field_tag :password, nil, class: 'form-control' %>
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<%= button_tag "Войти", class: 'btn btn-default' %>
			</div>
		</div>
<% end %>