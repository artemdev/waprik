
<% provide(:title, "#{@collection.name.mb_chars.capitalize} от #{show_date_for @date}") %>

<div class="span2 offset5">
	<p>
		<%= link_to	"обновить", nil, class: "refresh-button btn btn-primary" %>
		<% if current_user.subscribed_to? @collection  %>
			<%= link_to	"отписаться", subscribtion_path(@collection.id, content: 'collection'), class: "refresh-button btn btn-danger", method: :delete %>
		<% else %>
			<%= link_to	"подписаться", subscribtions_path(content: 'collection', id: @collection.id), class: "refresh-button btn btn-info", method: :post %>
		<% end %>
	</p>
</div>

