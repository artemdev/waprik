<% provide(:title, "Подборки") %>
	<div class="span8 offset2">
	<p>
	<%= link_to "создать подборку", new_admin_collection_path, class: 'btn btn-large btn-success ' %>
	</p>
	<% if @collections.any? %>
		<% @collections.each do |collection| %>
			<%= div_for(collection, class: 'collection') do %>
				<p>
					<%= fa_icon('star', class: 'favourite-collection') if collection.hit? %>
					<%= link_to collection.name, admin_collection_path(collection.permalink) %>
					<%= link_to "ред", edit_admin_collection_path(collection.permalink) %>
					<%= link_to "удалить", admin_collection_path(collection.permalink), method: :delete %>
					<%= collection.tracks.count %> <br />
					<%= link_to "web просмотр", web_collection_path(collection) %>
				</p>
			<% end %>
		<% end %>
	<% else %>
		Подборок нет
	<% end %>


</div>