<% provide(:title, "Подборки") %>

<div class="new-collection">
	<%= link_to "создать подборку", new_admin_collection_path %>
</div>

<% if @collections.any? %>
	<% @collections.each do |collection| %>
		<%= div_for(collection, class: 'collection') do %>
			<%= fa_icon('star', class: 'favourite-collection') if collection.hit? %>
			<%= link_to collection.name, admin_collection_path(collection.permalink) %>
			<%= link_to fa_icon('pencil', class: 'remove-collection'), edit_admin_collection_path(collection) %>
			<%= link_to fa_icon('times', class: 'remove-collection'), admin_collection_path(collection), method: :delete, remote: true %>
			<%= collection.tracks.count %> <br />
			с музыкой <b><%= collection.with_music ? "да" : "нет" %></b> <br />
			с фильмами <b><%= collection.with_films ? "да" : "нет" %></b>
		<% end %>
	<% end %>
<% else %>
	Подборок нет
<% end %>