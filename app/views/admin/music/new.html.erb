<% provide(:title, "добавить mp3") %>

<%= form_for @track, url: admin_tracks_path, method: :post, html: { multipart: true, class: 'a' } do |f| %>
	<%= f.label :name, "Название" %> <br />
	<%= f.text_field :name %> <br />

	<%= f.label :new_path, "Файл" %> <br />
	<%= f.file_field :new_path %> <br />
	
	<%= f.label :artist_name, "Исполнитель" %> <br />
	<%= f.text_field :artist_name, data: { autocomplete_source: Mp3Artist.order(:name).map(&:name) } %> <br />

	<%= f.label :album_name, "Исполнитель" %> <br />
	<%= f.text_field :album_name %> <br />

	<%= f.submit "Добавить" %>
<% end %>