<% provide(:title, "Редактировать сериал") %>

<%= error_messages_for(@serial) %>

<%= form_for(@serial, url: admin_serial_path(@serial), html: { multipart: true }) do |f| %>
	
	<%= render(partial: 'admin/shared/serial', locals: {:f => f}) %>

	<%= f.submit("Добавить") %>
<% end %>

<% unless @serial.series.empty? %>
	Серий: <%= link_to @serial.series.count, { controller: 'series', action: 'edit', id: @serial.id }%> <br />
<% end %>

<%= link_to "Добавить серию", {controller: 'series', action: 'new', id: @serial.id} %> <br />

<% unless @serial.series.empty? || @serial.series.first.new_record? %>
	<%= link_to "Редактировать серии", {controller: 'series', action: 'edit', id: @serial.id} %>
<% end %>