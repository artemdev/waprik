<% provide(:title, "Фильм с кинопоиска") %>

<% if @movies.any? %>
	<% @movies.each do |movie| %>
		<%= content_tag(:div, class: 'kinopoisk-film') do %>
			<%= link_to movie.first, new_admin_film_path(movie_url: movie.last) %>
			<br />
		<% end %>
	<% end %>
<% else %>
	<div class="film-not-found">
		Фильмов не найдено
	</div>
<% end %>