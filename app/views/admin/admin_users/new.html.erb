<% @title = "New Admin User" %>

<div class="b">
	<%= error_messages_for(@user) %>
</div>

<div class="title">
	Создать админа
</div>

<div class="b">
	<%= form_for(:user, :url => {:action => 'create'}) do |f| %>

		<%= render(:partial => 'form', :locals => {:f => f}) %>

		<%= f.label(:password) %> <br />
		<%= f.password_field(:password) %> <br />

		<%= submit_tag("Создать") %>
	<% end %>
</div>

<div class="foot">
	<%= link_to("Админы", :controller => 'admin_users') %> <br />
	<%= link_to("Меню", :controller => 'access') %> <br />
	<%= link_to("Выход", :controller => 'access', :action => 'logout') %>
</div>