<% keywords "скачать фильм на телефон, скачать фильмы на андроид, фильмы для android, фильмы для телефона, скачать фильмы mp4" %>
<% description "скачать фильмы на телефон бесплатно и без регистрации" %>
<h1 class="title"><%= title "скачать фильмы на телефон" %></h1>

<% if @latest_date %>
	<div class="b">
		<% if @latest_date %>
			<%= link_to "Новинки", latest_films_path %>
			от <%= @latest_date %>
			<br />
		<% end %>
		<%= link_to "Избранные новинки", news_films_path %>
	</div>

	<div class="title">
		Жанры
	</div>

	<div class="a">
		<%= form_tag films_path, method: :get do %>
			<%= text_field_tag :film_name %>
			<%= submit_tag "найти", name: nil %>
		<% end %>
	</div>

	<% if @films.any? %>
		<div class="a">
			<% @films.each do |film| %>
				<%= link_to film.title, film_path(film.permalink) %> <br />
			<% end %>
		</div>
	<% end %>

		<div class="a">
			<% @genres.each do |genre| %>
				<%= link_to genre.title.mb_chars.capitalize, film_genre_path(genre) %>
				<span class="small-text">
					<%= genre.films.count %>
				</span>
				 <br />
			<% end %>
		</div>

		<div class="title">
			Плейлисты
		</div>
		<div class="a">
			<% @collections_genres.each do |genre| %>
				<% if genre.collections.any? %>
					<%= link_to genre.title.mb_chars.capitalize, collection_genre_path(genre) %> <br />
				<% end %>
			<% end %>
		</div>
<% else %>
	<div class="a">
		Фильмов нет
	</div>
<% end %>
