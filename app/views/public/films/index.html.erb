<% provide(:title, "Категории") %>

<div class="a">
	<%= form_tag films_path, method: :get do %>
		<%= text_field_tag :film_name %>
		<%= submit_tag "найти", name: nil %>
	<% end %>
</div>

<% if @films.any? %>
	<div class="a">
		<% @films.each do |film| %>
			<%= link_to film.title, film_path(film) %> <br />
		<% end %>
	</div>
<% end %>
<div class="a">
	<% @genres.each do |genre| %>
		<%= link_to genre.title.mb_chars.capitalize, film_genre_path(genre) %>
		<span class="small-text">
			<%= genre.films.size %>
		</span>
		<br />
	<% end %>
</div>
