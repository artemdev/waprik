<% provide(:title, @news.title) %>

<div class="a">
	<%= @news.description.html_safe %>
</div>

<% unless @related_news == [] %>
	<div class="title">
		<%= @item.created_at.to_s(:DayMonth) %> так же обновлены
	</div>
	<div class="a">
		<% @related_news.each do |item| %>
			<%= link_to(news_sections(item), :action => 'show', :id => item.id, :section => item.section) %>
		<% end %>
	</div>
<% end %>