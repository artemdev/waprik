<% keywords "скачать фильм на телефон" %>
<% description "скачать фильмы на телефон бесплатно и без регистрации" %>
<h1 class="title"><%= title @genre.title %></h1>

<% if @films && @films.any? %>
	<div class="a">
		<%= render partial: 'public/shared/films', locals: { :films => @films } %>
	</div>
	
	<%= will_paginate @films, previous_label: "", next_label: "", class: "b" %>
<% elsif @serials && @serials.any? %>
	<div class="a">
		<%= render partial: 'public/shared/serials', locals: { :serials => @serials } %>
	</div>
	
	<%= will_paginate @serials, previous_label: "", next_label: "", class: "b" %>
<% else %>
	<div class="a">
		Пусто
	</div>
<% end %>
