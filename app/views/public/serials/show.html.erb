<% provide(:title, @serial.name) %>

<% if @serial.season.present? %>
	<div class="b">
		<%= @serial.season %> сезон
	</div>
<% end %>


<div class="b">
	Скачиваний <%= count_downloads_for @serial %> <br />
	Статус: <%= status_for @serial %>
</div>

<div class="a">
	<%= image_tag @serial.cover.preview.url unless @serial.cover.url.nil? %>
</div>

<div class="a">
	<%= @serial.description %>

	<% unless @serial.years.nil? || @serial.years.empty? %>
		<hr />
		Года: <%= @serial.years %>
	<% end %>

	<% unless @serial.categories.empty? %>
		<hr />
		Жанры
		<% @serial.categories.uniq.each do |category| %>
			<%= link_to category.name, controller: 'public/categories', action: 'show', id: category.id, content_type: 'serials' %>
		<% end %>	
	<% end %>
</div>

<% @series.each do |series| %>
	<% if has_any_files?(series) %>
		<div class="title">
			<%= series.number %> серия
		</div>
		<div class="a">
			<% unless series.low_3gp.url.nil? %>
				<%= link_to "3GP", {:action => 'download', :version => "low_3gp", :id => series.id}  %> <%= number_to_human_size(series.low_3gp.size) %> <br />
				<span class="small_text">Для телефонов</span>
			<% end %>

			<% unless series.mp4_320.url.nil? %>
				<hr />
				<%= link_to "MP4 (хорошее качество)", {:action => 'download', :version => "mp4_320", :id => series.id} %> <%= number_to_human_size(series.mp4_320.size) %> <br />
				<span class="small_text">Для телефонов, смартфонов</span> 
			<% end %>
				
			<% unless series.mp4_640.url.nil? %>
				<hr />
				<%= link_to "MP4 (отличное качество)", {:action => 'download', :version => "mp4_640", :id => series.id} %> <%= number_to_human_size(series.mp4_640.size) %> <br />
				<span class="small_text">Для смартфонов, планшетов</span> 
			<% end %>
		</div>
	<% end %>
<% end %>
</div>

<% @footer_links = [] %>
<% @footer_links << "#{link_to 'Все сериалы', serials_path} <br/>" %>
