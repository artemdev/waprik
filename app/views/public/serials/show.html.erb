<% provide(:title, @serial.name) %>

<% if @serial.season.present? %>
	<div class="b">  <!-- season -->	
		<%= @serial.season %> сезон
	</div>
<% end %>


<div class="b"> <!-- info -->	
	Скачиваний <%= count_downloads_for @serial %> <br />
	Статус: <%= status_for @serial %>
</div>

<div class="a"> <!-- cover -->	
	<%= image_tag @serial.cover.preview.url unless @serial.cover.url.nil? %>
</div>

<div class="a"> <!-- description -->	
	<%= @serial.description %>

	<% if @serial.years.present? %>
		<hr />
		Года: <%= @serial.years %>
	<% end %>

	<% if @serial.categories.any? %>
		<hr />
		Жанры
		<% @serial.categories.uniq.each do |category| %>
			<%= link_to category.name, controller: 'public/categories', action: 'show', id: category.id, content_type: 'serials' %>
		<% end %>	
	<% end %>
</div>

<% if @series.any? %> <!-- series -->	
	<% @series.each do |serie| %>
		<% if serie.files.any? %>
			<div class="title">
				<%= serie.number %> серия
			</div>
				<% serie.files.each do |file| %>
					<div class="a">  <!-- files -->	
						<!-- TODO сделать скачивание файлов серии -->
						<%= link_to file.format.title, "" %>
						<%= number_to_human_size(file.size) %>
						<br />
						<span class="small-text">
							<%= file.format.description %>
						</span> 
					</div>
				<% end %><!-- # serie.files.each -->
		<% end %> <!-- # @series.each -->
	<% end %> <!-- # serie.files.any? -->
<% else %>
	<div class="a">
		Нет доступных серий, попробуйте зайти позже
	</div>
<% end %> <!-- @series.any? -->

<% @footer_links = Array.new %>
<% @footer_links << "#{ link_to 'Все сериалы', serials_path }" %>
<% @footer_links << "#{ link_to @serial.categories.last.name }" if @serial.categories.last %>
